{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "admin": "bun --filter './apps/admin' dev",
    "backend": "bun --filter './apps/backend' dev",
    "backend:start": "bun --filter './apps/backend' start",
    "clean": "bun --filter '*' clean",
    "cli": "bun --env-file=./apps/cli/.env ./apps/cli/dist/cli.js",
    "cli:release": "bun --filter './apps/cli' release",
    "cli:release:latest": "cd ./apps/cli && npm run release:latest",
    "cli:watch": "bun --env-file=./apps/cli/.env --watch --inspect='ws://localhost:6499/cli' ./apps/cli/src/cli.tsx",
    "dev": "NODE_ENV=development NO_COLOR=1 bun --filter='./packages/mocked-agent' --filter='./apps/**' dev",
    "docker:build": "sh ./scripts/docker-build.sh",
    "lint": "bun --filter '*' lint",
    "lint:fix": "bun --filter '*' lint:fix",
    "prepare": "husky",
    "setup": "sh ./scripts/setup.sh",
    "test": "bun --filter '*' test",
    "types:check": "bun --filter '*' types:check"
  },
  "lint-staged": {
    "(*.ts|*.tsx|*.js|*.jsx|*.json|*.md|*.yml|*.yaml|*.css)": [
      "bun lint:fix"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-ecr": "3.812.0",
    "@inkjs/ui": "2.0.0",
    "@stackframe/js": "^2.8.6",
    "@stackframe/react": "^2.8.20",
    "@tanstack/react-query": "5.69.0",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "eventsource": "^3.0.6",
    "ink": "5.2.0",
    "ink-divider": "^4.1.1",
    "ink-markdown": "^1.0.4",
    "ink-spinner": "^5.0.0",
    "ink-syntax-highlight": "2.0.2",
    "ink-text-input": "^6.0.0",
    "jose": "^6.0.10",
    "meow": "13.2.0",
    "node-fetch": "3.3.2",
    "open": "10.1.2",
    "query-string": "^9.1.1",
    "react": "18.3.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.6.3",
    "zod": "^3.24.2",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "9.23.0",
    "@semantic-release/changelog": "6.0.0",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "10.0.3",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@tanstack/eslint-plugin-query": "^5.68.0",
    "@types/node": "^22.14.1",
    "@types/react": "18.3.0",
    "bun": "1.2.5",
    "chalk": "5.4.1",
    "eslint": "9.23.0",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "^9.1.7",
    "ink-testing-library": "^3.0.0",
    "lint-staged": "^15.5.1",
    "prettier": "^2.8.7",
    "react-devtools-core": "^6.1.1",
    "semantic-release-monorepo": "8.0.2",
    "typescript": "5.8.2",
    "typescript-eslint": "8.28.0",
    "xo": "^0.53.1"
  },
  "packageManager": "bun@1.2.5"
}
