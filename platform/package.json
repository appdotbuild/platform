{
  "name": "bot.new",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,json,css}\"",
    "clean": "rimraf -g ./**/node_modules ./**/dist ./**/.turbo ./**/.coverage ./**/.next",
    "syncpack:fix": "syncpack fix-mismatches",
    "syncpack:update": "syncpack update"
  },
  "devDependencies": {
    "prettier": "3.2.5",
    "syncpack": "13.0.0",
    "turbo": "2.1.2",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "rimraf": "6.0.1"
  },
  "packageManager": "bun@1.1.26"
}
